{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Earthquakes Overtime",
    "data": {
        "url": "data/earthquake_binned.csv"
    },
    "params": [
        {
            "name": "From",
            "value": 1900,
            "bind": {
                "input": "range",
                "min": 1900,
                "max": 2021,
                "step": 1
            }
        },
        {
            "name": "Until",
            "value": 2021,
            "bind": {
                "input": "range",
                "min": 1900,
                "max": 2021,
                "step": 1
            }
        }
    ],
    "width": "container",
    "transform": [
        {
            "filter": "datum.Year > From"
        },
        {
            "filter": "datum.Year <= Until"
        },
        {
            "bin": true,
            "field": "Year",
            "as": "Binned Year"
        }
    ],
    "layer": [
        {
            "mark": "bar",
            "encoding": {
                "x": {
                    "field": "Binned Year",
                    "type": "Quantitative",
                    "title": "Binned Year",
                    "Bin": {
                        "Binned": true,
                        "step": 10
                    }
                },
                "y": {
                    "aggregate": "mean",
                    "field": "Dis Mag Value",
                    "type": "quantitative",
                    "title": "Mean Intensity"
                },
                "color": {
                    "aggregate": "mean",
                    "type": "quantitative",
                    "field": "Dis Mag Value",
                    "scale": {
                        "scheme": "browns"
                    }
                },
                "tooltip": [
                    {
                        "aggregate": "mean",
                        "field": "Dis Mag Value",
                        "type": "nominal",
                        "title": "Mean Magnitude",
                        "format": ",.3f"
                    }
                ]
            }
        },
        {
            "mark": "line",
            "encoding": {
                "x": {
                    "field": "Year",
                    "type": "Quantitative",
                    "title": "Binned Year"
                },
                "y": {
                    "aggregate": "count",
                    "field": "Dis No",
                    "type": "nominal"
                },
                "color": {
                    "aggregate": "mean",
                    "type": "quantitative",
                    "field": "Dis Mag Value",
                    "scale": {
                        "scheme": "greys"
                    }
                }
            }
        }
    ],
    "resolve": {
        "scale": {
            "y": "independent"
        }
    }
}