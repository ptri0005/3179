{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Floods Overtime",
    "data": {
        "url": "data/flood_binned.csv"
    },
    "params": [
        {
            "name": "Year_Before",
            "value": 2021,
            "bind": {
                "input": "range",
                "min": 1900,
                "max": 2021
            }
        },
        {
            "name": "Year_After",
            "value": 1900,
            "bind": {
                "input": "range",
                "min": 1900,
                "max": 2021
            }
        }
    ],
    "width": "container",
    "transform": [
        {
            "filter": "datum.Year > Year_After"
        },
        {
            "filter": "datum.Year <= Year_Before"
        },
        {
            "bin": true,
            "field": "Year",
            "as": "Binned Year"
        }
    ],
    "layer": [
        {
            "mark": "bar",
            "encoding": {
                "x": {
                    "field": "Binned Year",
                    "type": "Quantitative",
                    "title": "Binned Year",
                    "Bin": {
                        "Binned": true,
                        "step": 10
                    }
                },
                "y": {
                    "aggregate": "sum",
                    "field": "Total Deaths",
                    "type": "quantitative",
                    "title": "Total Deaths"
                },
                "color": {
                    "aggregate": "sum",
                    "type": "quantitative",
                    "field": "Total Deaths",
                    "scale": {
                        "scheme": "blues",
                        "type": "log"
                    }
                },
                "tooltip": [
                    {
                        "aggregate": "sum",
                        "field": "Total Deaths",
                        "type": "nominal",
                        "title": "Total Deaths"
                    }
                ]
            }
        },
        {
            "mark": "line",
            "encoding": {
                "x": {
                    "field": "Year",
                    "type": "Quantitative",
                    "title": "Binned Year"
                },
                "y": {
                    "aggregate": "count",
                    "field": "Dis No",
                    "type": "nominal"
                }
            }
        }
    ],
    "resolve": {
        "scale": {
            "y": "independent"
        }
    }
}